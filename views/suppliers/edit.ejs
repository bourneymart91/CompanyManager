<html>
<head>
    <% include ../partials/head %>
</head>
<body>
    <header>
        <% include ../partials/header %>
        <% include ../partials/headerSuppliers %>
    </header>

    <div class="ui raised very padded text container segment"> 

        <div class="ui header">
            Edit Supplier
        </div>

        <form method="POST" action="/suppliers/<%=supplier._id%>?_method=PUT" class="ui form">
            
            <label for="supplier[name]">Name</label>
            <input type="text" name="supplier[name]" value="<%=supplier.name%>" >

            <label for="supplier[address]">Address</label>
            <input type="text" name="supplier[address]" value="<%=supplier.address %>">
            
            <label for="supplier[contact]">Contact</label>
            <input type="text" name="supplier[contact]" value="<%=supplier.contact %>">

            <label for="supplier[email]">Email</label>
            <input type="text" name="supplier[email]" value="<%=supplier.email %>">

            <label for="supplier[telephone]">Phone</label>
            <input type="text" name="supplier[telephone]" value="<%=supplier.telephone %>">

            <input class="ui" type="submit">


        </form>

    </div>
</body>
</html>