<html>
<head>
    <% include ../partials/head %>
</head>
<body>
    <header>
            <% include ../partials/header %>
            <% include ../partials/headerSuppliers %>
    </header>
    <div class="ui raised very padded text container segment">
        <form action="/suppliers" method="POST" class="ui form">

            <div class="field">
                <label of="supplier[name]">Name</label>
                <input type="text"  name="supplier[name]" placeholder="Company Name">
            </div>

            <div class="field">
                <label of="supplier[address]">Address</label>
                <input type="text" name="supplier[address]" placeholder="Address">
            </div>

            <div class="field">
                <label for="supplier[contact]">Contact</label>
                <input type="text" name="supplier[contact]" id="" placeholder="Contact Name">
            </div>

            <div class="field">
                <label for="supplier[email]">Email</label>
                <input type="text" name="supplier[email]" id="" placeholder="Email Address">
            <div class="field">
        

            <div class="field">
                <label for="supplier[telephone]">Phone</label>
                <input type="text" name="supplier[telephone]" placeholder="Phone Number">
            </div>
            <button class="ui button" type="submit">Add Supplier</button>
        </form>
    </div>
</body>
</html>

